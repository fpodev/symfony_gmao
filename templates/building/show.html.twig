{% extends 'base.html.twig' %}

{% block title %}Building{% endblock %}

{% block body %}
    <h1>Building</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ building.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ building.name }}</td>
            </tr> 
            <tr>
                <th>Ville</th>
                <td>{{ building.ville }}</td>
            </tr>        
            <tr>
                <th>Listes des Secteurs</th>
            </tr>
            <td>
                <select id="mySecteur" onchange="myFunction()">
                    {% for secteur in secteurs  %}                             
                    <option value='{{ secteur.id }}'>{{ secteur.name }}</option>
                    {% endfor %}
                </select>
                <button><a id="change" href="">Editer ce secteur</a></button>                                                           
            </td>                     
        </tbody>
    </table>

    <a href="{{ path('building_index') }}">back to list</a>

    <a href="{{ path('building_edit', {'id': building.id}) }}">edit</a>

    {{ include('building/_delete_form.html.twig') }}
{% endblock %}
{% block javascripts %}
<script>
    function myFunction() {
      var x = document.getElementById("mySecteur").value;  
      var url = "{{ path('sector_edit', {'id': 'value'}) }}"; 
      url = url.replace("value", x);
      document.getElementById("change").href = url;
    }
    window.onload = myFunction;
    </script>
{% endblock %}
