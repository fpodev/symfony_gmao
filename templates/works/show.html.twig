{% extends 'base.html.twig' %}

{% block title %}Works{% endblock %}

{% block body %}
    <h1>Works</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ work.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ work.title }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ work.description }}</td>
            </tr>
            <tr>
                <th>Task</th>
                <td>{{ work.task }}</td>
            </tr>
            <tr>
                <th>Create_date</th>
                <td>{{ work.createDate ? work.createDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Validate_date</th>
                <td>{{ work.validateDate ? work.validateDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Estimate</th>
                <td>{{ work.estimate }}</td>
            </tr>
            <tr>
                <th>Invoice</th>
                <td>{{ work.invoice }}</td>
            </tr>
            <tr>
                <th>Start_datetime</th>
                <td>{{ work.startDatetime ? work.startDatetime|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Finish_datetime</th>
                <td>{{ work.finishDatetime ? work.finishDatetime|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('works_index') }}">back to list</a>

    <a href="{{ path('works_edit', {'id': work.id}) }}">edit</a>

    {{ include('works/_delete_form.html.twig') }}
{% endblock %}
