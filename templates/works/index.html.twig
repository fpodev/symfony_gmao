{% extends 'base.html.twig' %}

{% block title %}Works index{% endblock %}

{% block body %}
    <h1>Works index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Description</th>
                <th>Task</th>
                <th>Create_date</th>
                <th>Validate_date</th>
                <th>Estimate</th>
                <th>Invoice</th>
                <th>Start_datetime</th>
                <th>Finish_datetime</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for work in works %}
            <tr>
                <td>{{ work.id }}</td>
                <td>{{ work.title }}</td>
                <td>{{ work.description }}</td>
                <td>{{ work.task }}</td>
                <td>{{ work.createDate ? work.createDate|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ work.validateDate ? work.validateDate|date('Y-m-d') : '' }}</td>
                <td>{{ work.estimate }}</td>
                <td>{{ work.invoice }}</td>
                <td>{{ work.startDatetime ? work.startDatetime|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ work.finishDatetime ? work.finishDatetime|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('works_show', {'id': work.id}) }}">show</a>
                    <a href="{{ path('works_edit', {'id': work.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="11">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('works_new') }}">Create new</a>
{% endblock %}
